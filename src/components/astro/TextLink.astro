---
import type { HTMLAttributes } from 'astro/types';

import AppLink from '@/components/astro/AppLink.astro';

export interface Props extends HTMLAttributes<'a'> {
  external?: boolean;
}

const { external, class: classProps, ...props } = Astro.props;

const className = `font-medium relative
  text-content
  decoration-outline
  transition-colors
  hover:text-primary
  focus:text-primary
  hover:decoration-primary
  focus:decoration-primary
  focus:outline-none
  underline
  underline-offset-4
  ${classProps || ''}`;
---

<AppLink external={external} class={className} {...props}><slot /></AppLink>
