---
import type { HTMLAttributes } from 'astro/types';
import AppLink from '@/components/astro/AppLink.astro';

export interface TextLinkProps extends HTMLAttributes<'a'> {
  external?: boolean;
}

const { external, class: classProps, ...props } = Astro.props;

const className = `font-medium relative
  text__link
  after:bg-outline
  text-content
  transition-colors
  hover:text-primary
  hover:after:bg-primary
  focus:text-primary
  focus:after:bg-primary
  focus:outline-none
  ${classProps || ''}`;
---

<AppLink external={external} class={className} {...props}><slot /></AppLink>

<style scoped>
  .text__link::after {
    position: absolute;
    content: '';
    width: 100%;
    height: 1px;
    left: 0;
    bottom: -1px;
    transition: background 150ms ease-out;
  }
</style>
