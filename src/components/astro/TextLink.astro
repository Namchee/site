---
import AppLink from '@/components/astro/AppLink.astro';

export interface TextLinkProps {
  href: string;
  external?: boolean;
  class?: string;
}

const { href, external, class: classProps } = Astro.props;

const className = `font-medium relative
  text__link
  after:bg-outline
  text-content
  transition-colors
  hover:text-primary
  hover:after:bg-primary
  focus:text-primary
  focus:after:bg-primary
  focus:outline-none
  ${classProps || ''}`
---

<AppLink
  href={href}
  external={external}
  class={className}
><slot /></AppLink>

<style scoped>
.text__link::after {
  position: absolute;
  content: "";
  width: 100%;
  height: 1px;
  left: 0;
  bottom: -1px;
  transition: background 150ms ease-out;
}
</style>
