---
import AppLink from '@/components/astro/AppLink.astro';

import { Icon } from 'astro-iconify';
---

<footer class="flex flex-col items-center w-full py-8">
  <p class="text-sm leading-relaxed text-content-variant">
    Say hello
  </p>

  <AppLink href="mailto:hello@namchee.dev">
    hello@namchee.dev
  </AppLink>

  <div class="flex mt-8 space-x-4">
    <Icon
      name="radix-icons:github-logo"
      class="fill-current text-content-light w-4"
    />

    <Icon
      name="radix-icons:twitter-logo"
      class="fill-current text-content-light w-4"
    />

    <Icon
      name="radix-icons:linkedin-logo"
      class="fill-current text-content-light w-4"
    />
  </div>

  <div class="mt-8 flex justify-between">
    <p>
      &copy; 2023 Namchee
    </p>
  </div>
</footer>
