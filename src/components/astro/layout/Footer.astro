---
import AppLink from "@/components/astro/ui/AppLink.astro";

import Github from "@/components/astro/icons/Github.astro";
import LinkedIn from "@/components/astro/icons/LinkedIn.astro";
import X from "@/components/astro/icons/X.astro";

const links = [
  {
    icon: Github,
    label: "Namchee - GitHub",
    href: "https://github.com/Namchee",
  },
  {
    icon: X,
    label: "@lakban_hitam - X (Twitter)",
    href: "https://twitter.com/lakban_hitam",
  },
  {
    icon: LinkedIn,
    label: "Cristopher - LinkedIn",
    href: "https://www.linkedin.com/in/namchee/",
    hover: "",
  },
];
---

<footer class="flex flex-col items-center
  w-full max-w-7xl mx-auto
  py-8">
  <div class="text-center space-y-1">
    <p class="text-sm">Say hello</p>
    <p>
      <AppLink href="mailto:hello@namchee.dev" class="text-link text-lg">
        hello@namchee.dev
      </AppLink>
    </p>
  </div>

  <div class="flex items-center space-x-6 mt-8">
    {
      links.map((link) => (
        <AppLink href={link.href} title={link.label} class="group">
          <link.icon
            aria-hidden="true"
            focusable="false"
            class="w-4 h-auto text-content transition-colors hover:text-link group-focus:text-link"
          />
          <span class="sr-only">{link.label}</span>
        </AppLink>
      ))
    }
  </div>

  <div class="w-full text-sm flex items-center justify-between mt-16">
    <div class="flex">
      <span>All contents are licensed under</span>
       &nbsp;
      <AppLink
        external
        href="http://creativecommons.org/licenses/by/4.0"
        rel="license noopener noreferrer"
        class="flex items-center text-link hover:text-heading transition-colors font-medium space-x-1"
      >
        <span>CC BY 4.0</span>
        <img
          class="h-4 w-auto"
          src="https://mirrors.creativecommons.org/presskit/icons/cc.svg"
        /><img
          class="h-4 w-auto"
          src="https://mirrors.creativecommons.org/presskit/icons/by.svg"
        />
      </AppLink>
    </div>

    <AppLink
      href="/colophon"
      class="text-link font-medium hover:text-accent focus:text-accent transition-colors"
    >
      Colophon
    </AppLink>
  </div>
</footer>
