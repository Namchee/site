---
import { Icon } from "astro-icon/components";

import AppLink from "@/components/astro/ui/AppLink.astro";
import ButtonLink from "@/components/astro/ui/ButtonLink.astro";
import Logo from "@/components/astro/ui/Logo.astro";

const contacts = [
  {
    icon: "lucide:mail",
    label: "hello@namchee.dev",
    href: "mailto:hello@namchee.dev",
  },
  {
    icon: "simple-icons:github",
    label: "Namchee",
    href: "https://github.com/Namchee",
  },
  {
    icon: "simple-icons:linkedin",
    label: "Cristopher",
    href: "https://www.linkedin.com/in/namchee/",
  },
  {
    icon: "simple-icons:x",
    label: "@lakban_hitam",
    href: "https://twitter.com/lakban_hitam",
  },
];
---

<footer
  class=":uno: space-y-6 md:space-y-8 w-full mx-auto text-sm py-8 md:pb-[43px] pb-24"
>
  <div class="flex md:flex-col items-center space-x-4 md:space-x-0 md:space-y-4">
    <Logo class="w-8 h-[36px]" />

    <div class=":uno: flex items-center space-x-2">
      {contacts.map(link => {
        return <ButtonLink href={link.href} title={link.label} class=":uno: group flex items-center space-x-2" rel="me">
          <Icon
            name={link.icon}
            title={link.label}
            aria-hidden="true"
            focusable="false"
            class=":uno: w-4 h-auto text-content transition-colors group-hover:text-heading group-focus:text-heading flex-none"
          />
        </ButtonLink>
      })}
    </div>
  </div>

  <div class="flex justify-between items-center">
    <p>
      <AppLink class="font-medium transition-colors hover:text-heading focus:text-heading" href="https://creativecommons.org/licenses/by/4.0/deed" >CC BY 4.0</AppLink> &copy; Namchee
    </p>

    <div class="flex space-x-4">
      <AppLink href="/sitemap-0.xml" class="font-medium transition-colors hover:text-heading focus:text-heading">
        Sitemap
      </AppLink>

      <AppLink href="/Colophon" class="font-medium transition-colors hover:text-heading focus:text-heading">
        Colophon
      </AppLink>
    </div>
  </div>
</footer>
