---
import type { HTMLAttributes } from 'astro/types';

// AppLink is a quick-wrap component for `a` tag.

export interface AppLinkProps extends HTMLAttributes<'a'> {
  external?: boolean;
}

const { external, ...props } = Astro.props;
---

<a rel="noopener noreferrer" target={external && '_blank'} {...props}
  ><slot /></a
>
