---
import '@/assets/styles/global.css';

import Navigation from '@/components/vue/Navigation.vue';
import Footer from '@/components/vue/Footer.vue';

export interface Props {
	title: string;
}

const { title } = Astro.props;
const { pathname } = new URL(Astro.request.url);
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title} &mdash; Namchee</title></head>
<body class="bg-light text-dark min-h-screen text-base flex flex-col">
  <Navigation currentPath={pathname} client:visible />
	<main class="w-full flex-1 max-w-7xl mx-auto">
		<slot />
	</main>
  <Footer />
</body>
</html>
