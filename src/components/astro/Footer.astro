---
import BackToTop from '@/components/vue/BackToTop.vue';
import AppLink from '@/components/astro/AppLink.astro';

import { Icon } from 'astro-iconify';
---

<footer
  class="w-[calc(100% - 32px)] bg-content mx-4 mb-4 rounded-xl py-16 space-y-32"
>
  <!-- start: top section -->
  <div class="max-w-7xl mx-auto text-background grid grid-cols-12 gap-4">
    <!-- start: email -->
    <div class="col-span-3">
      <p class="text-background font-mono text-opacity-50">Say hello,</p>

      <AppLink
        href="mailto:hello@namchee.dev"
        rel="noopener noreferrer"
        class="inline-block mt-2 text-xl leading-normal"
      >
        hello@namchee.dev
      </AppLink>
    </div>
    <!-- end: email -->

    <!-- start: sitemap -->
    <div class="col-start-7 col-span-3">
      <p class="text-background font-mono text-opacity-50">Sitemap</p>

      <ul class="mt-4 space-y-2">
        <li>
          <AppLink href="/">Home</AppLink>
        </li>

        <li>
          <AppLink href="/about">About</AppLink>
        </li>

        <li>
          <AppLink href="/blog" rel="noopener noreferrer">Blog</AppLink>
        </li>
      </ul>
    </div>
    <!-- end: sitemap -->

    <!-- start: social -->
    <div class="col-start-10 col-span-3">
      <p class="text-background font-mono text-opacity-50">Get in touch</p>

      <ul class="mt-4 space-y-2">
        <li>
          <AppLink href="https://www.github.com/Namchee" external>
            GitHub
          </AppLink>
        </li>

        <li>
          <AppLink href="https://www.twitter.com/lakban_hitam" external>
            Twitter
          </AppLink>
        </li>

        <li>
          <AppLink href="https://www.linkedin.com/in/namchee" external>
            LinkedIn
          </AppLink>
        </li>
      </ul>
    </div>
    <!-- end: social -->
  </div>
  <!-- end: top section -->

  <!-- start: bottom section -->
  <div class="max-w-7xl mx-auto flex justify-between text-surface">
    <p>Design and code by Namchee</p>

    <BackToTop as="button" class="flex items-center" client:visible>
      <Icon name="radix-icons:arrow-up" class="w-4 mr-2" />
      <span> Back to top</span>
    </BackToTop>
  </div>
  <!-- end: bottom section -->
</footer>
