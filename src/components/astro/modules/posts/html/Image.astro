---
import { Img } from "astro-imagetools/components";

import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'img'>;

const { alt, src } = Astro.props;
---

<figure>
  <Img
    src={src}
    alt={alt}
    attributes={{
      img: {
        title: alt,
        class: "rounded-md"
      }
    }}
    width={640}
    height={360}
  />

  <figcaption class="italic text-accent text-xs text-center mt-4">
    {alt}
  </figcaption>
</figure>
