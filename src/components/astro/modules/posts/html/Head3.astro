---
import type { HTMLAttributes } from "astro/types";

import { Icon } from "astro-iconify";

import AppLink from "@/components/astro/ui/AppLink.astro";

type Props = HTMLAttributes<"h3">;

const { id, ...props } = Astro.props;
---

<h3
  class="group inline-flex items-center text-heading text-lg font-semibold transition-colors"
  id={id}
  {...props}
>
  <slot />
  <AppLink
    href={`#${id}`}
    class="ml-1 text-content/70 hover:text-primary opacity-0 group-hover:opacity-100 transition-all"
    aria-hidden="true"
  >
    <Icon pack="lucide" name="hash" class="w-4 h-auto" />
  </AppLink>
</h3>
