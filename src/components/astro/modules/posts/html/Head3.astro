---
import type { HTMLAttributes } from 'astro/types';

import Hash from '~icons/lucide/hash';

import AppLink from '@/components/astro/ui/AppLink.astro';

type Props = HTMLAttributes<'h3'>;

const { id, ...props } = Astro.props;
---

<h3
  class=":uno: group text-lg text-heading font-semibold inline-flex transition-colors items-center relative mt-8!"
  id={id}
  {...props}
>
  <slot />
  <AppLink
    href={`#${id}`}
    class=":uno: text-content/70 ml-1 opacity-0 opacity-0 translate-y-0 transition-all absolute hover:text-content group-hover:opacity-100 -left-6"
    aria-label={id}
  >
    <Hash class=":uno: h-auto w-4" aria-hidden="true" />
  </AppLink>
</h3>
