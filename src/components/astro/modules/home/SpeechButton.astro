---
import { Icon } from "astro-iconify";
---

<button
  aria-label="Pronunce Namchee"
  class="rounded-full bg-surface hover:text-content hover:bg-separator transition-colors p-1 grid place-items-center speech__button"
>
  <Icon pack="lucide" name="volume-2" class="w-4 h-auto" />
</button>

<script is:inline>
  if (
    typeof window.speechSynthesis !== "undefined" &&
    typeof window.SpeechSynthesisUtterance !== "undefined"
  ) {
    const utterance = new window.SpeechSynthesisUtterance("Nam chÃ©");
    utterance.lang = "id-ID";
    utterance.pitch = 1.35;

    const button = document.querySelector(".speech__button");
    button.addEventListener("click", () => {
      window.speechSynthesis.speak(utterance);
    });
  }
</script>
