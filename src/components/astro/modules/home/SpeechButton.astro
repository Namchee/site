---
import { Icon } from "astro-iconify";
---

<button
  aria-label="Pronounce Namchee"
  class=":uno: rounded-full border border-separator hover:bg-surface dark:border-none dark:bg-surface transition-colors grid place-items-center hover:text-content dark:hover:bg-separator p-1 speech__button"
>
  <Icon pack="lucide" name="volume-2" class=":uno: w-4 h-auto fill-current" />
</button>

<script is:inline>
  if (
    typeof window.speechSynthesis !== "undefined" &&
    typeof window.SpeechSynthesisUtterance !== "undefined"
  ) {
    const utterance = new window.SpeechSynthesisUtterance("Nam chÃ©");
    utterance.lang = "id-ID";
    utterance.pitch = 1.35;

    const button = document.querySelector(".speech__button");
    button.addEventListener("click", () => {
      window.speechSynthesis.speak(utterance);
    });
  }
</script>
