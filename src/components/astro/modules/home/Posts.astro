---
import { getCollection } from 'astro:content';

import AppLink from "@/components/astro/ui/AppLink.astro";

const posts = (await getCollection('posts'))
  .filter(post => !post.data.isDraft)
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())
  .slice(0, 3);
---

<ul class=":uno: space-y-6 md:space-y-3">
  {
    posts.map((post) => (
      <li class=":uno: flex flex-col md:flex-row md:justify-between md:items-center gap-x-4">
        <AppLink
          href={`/posts/${post.slug}`}
          class=":uno: font-medium text-heading transition-colors hover:text-primary focus:text-primary inline-flex items-center space-x-2 text-balance"
        >
          {post.data.title}
        </AppLink>

        <p class=":uno: text-xs md:text-base mt-2 md:mt-0">{post.data.publishedAt.toLocaleString('en-GB', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}</p>
      </li>
    ))
  }
</ul>
