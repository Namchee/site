---
import type { HTMLAttributes } from "astro/types";

import AppLink from "@/components/astro/ui/AppLink.astro";

export interface Props extends HTMLAttributes<"a"> {
  external?: boolean;
}

const { external, class: classProps, ...props } = Astro.props;

const className = `font-medium relative
  text-content
  decoration-outline
  transition-colors
  hover:text-accent
  focus:text-accent
  hover:decoration-accent
  focus:decoration-accent
  focus:outline-none
  underline
  underline-offset-4
  ${classProps || ""}`;
---

<AppLink external={external} class={className} {...props}><slot /></AppLink>
