---
import type { HTMLAttributes } from "astro/types";

import AppLink from "@/components/astro/ui/AppLink.astro";

type Props = HTMLAttributes<'a'>;

const { class: className, ...props } = Astro.props;

const baseClass = `text-heading
  cursor-pointer
  decoration-outline
  decoration-heading
  decoration-opacity-25
  transition-colors
  hover:text-primary
  focus:text-primary
  hover:decoration-primary
  focus:decoration-primary
  underline
  underline-offset-4
  dark:text-opacity-85
  hover:dark:text-opacity-100
  focus:dark:text-opacity-100`;
---

<AppLink
  class:list={[baseClass, className]}
  style={{
    fontWeight: 525,
  }}
  {...props}
><slot /></AppLink>
