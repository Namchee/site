---
import type { HTMLAttributes } from 'astro/types';

import AppLink from '@/components/astro/ui/AppLink.astro';

type Props = HTMLAttributes<'a'>;

const { class: className, ...props } = Astro.props;

const baseClass = `:uno:
  text-heading/80
  font-medium
  cursor-pointer
  decoration-heading
  decoration-opacity-20
  transition-colors
  hover:text-heading
  focus:text-heading
  hover:decoration-opacity-100
  focus:decoration-opacity-100
  underline
  underline-offset-4`;
---

<AppLink
  class:list={[baseClass, className]}
  {...props}
><slot /></AppLink>
