---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'div'>;

const baseClass = ':uno: grid place-items-center rounded-lg border border-separator bg-background dark:bg-surface-1 transition-colors';

const { class: className, ...rest } = Astro.props;
---

<div class:list={[baseClass, className]} {...rest}>
  <slot />
</div>
