<Layout title="Hello World!">
	<div class="mt-20 md:mt-24 mb-48 space-y-48 md:space-y-64">
		<!-- start: top section -->
		<header class="pt-16 md:pt-24 lg:pt-32">
			<RevealingText
				reveal="header"
				stagger={0.125}
				duration={0.75}
				easing="ease-out-cubic"
				client:visible
			>
				<h1 class="text-header tracking-tighter leading-snug font-medium">
					<p class="overflow-y-hidden">
						<span class="inline-block translate-y-64 header">
							Hey there!
						</span>
					</p>
					<p class="overflow-y-hidden">
						<span class="inline-block translate-y-64 header">
							Just call me Namchee
						</span>
					</p>
				</h1>
			</RevealingText>

			<div class="flex flex-col xl:flex-row xl:items-center justify-between mt-4">
				<p class="text-grey">
					Namchee writes code that solves problems to make the world a better place
				</p>

				<div class="mt-12 xl:mt-0 self-start">
					<CircledLink href="/about" class="circled__button grid place-items-center">
						<div class="flex items-center md:text-lg tracking-tight col-span-full row-span-full">
							<span class="mr-2">Know me more</span>
							<ArrowRight />
						</div>
					</CircledLink>
				</div>
			</div>
		</header>
		<!-- end: top section -->

		<!-- start: projects section -->
		<section class="hidden">
			<h2 class="font-semibold tracking-tight text-4xl leading-relaxed">
				Recent Posts
			</h2>
			<p class="text-2xl text-grey mt-2 leading-relaxed">
				Find my latest thoughts here
			</p>

			<div class="mt-16 grid grid-cols-12 gap-x-6">
				<div class="col-span-9">
					Bar
				</div>

				<div class="col-span-3">
					Foo
				</div>
			</div>
		</section>
		<!-- end: project section -->

		<!-- start: projects section -->
		<section>
			<div class="flex flex-col xl:flex-row justify-between lg:space-x-12">
				<p class="text-grey uppercase font-semibold text-xs md:text-base">
					Featured Projects
				</p>

				<RevealingText stagger={0.125} duration={0.75} client:visible reveal="sub-header">
					<h2 class="text-sub-header mt-6 md:mt-4 xl:-mt-4 font-medium tracking-tight">
						<p class="overflow-y-hidden">
							<span class="inline-block translate-y-64 sub-header">
								A selection of stuffs I've built
							</span>
						</p>
						<p class="overflow-y-hidden">
							<span class="inline-block translate-y-64 sub-header">
								to solve problems
							</span>
						</p>
					</h2>
				</RevealingText>
			</div>

			<div class="mt-16 lg:mt-32 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16">
				{projects.map((project) => (
					<Project
						name={project.name}
						image={project.image}
						description={project.description}
						repository={project.repository}
						link={project.link}
					/>
					))
				}
			</div>

			<div class="mt-32 flex justify-center">
				<CircledLink href="https://github.com/Namchee?tab=repositories" external>
					<div class="flex items-center text-lg lg:text-xl tracking-tight col-span-full row-span-full">
						More projects please?
					</div>
				</CircledLink>
			</div>
		</section>
		<!-- end: project section -->

