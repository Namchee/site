---
import Layout from '@/components/astro/Layout.astro';
import CircledLink from '@/components/astro/CircledLink.astro';
import Project from '@/components/astro/Project.astro';

import ArrowRight from '~icons/radix-icons/arrow-right';
import RevealingText from '@/components/vue/RevealingText.vue';

const projects = [
	{
		name: 'Conventional PR',
		image: 'https://res.cloudinary.com/namchee/image/upload/v1655467239/personal-site/cpr.webp',
		description: 'Create and enforce standards in pull requests through GitHub Actions.',
		repository: 'https://www.github.com/Namchee/conventional-pr',
	},
	{
		name: 'Fav',
		image: 'https://res.cloudinary.com/namchee/image/upload/v1655467239/personal-site/Fav.webp',
		description: 'Generate complete set of favicons for modern websites within few clicks.',
		repository: 'https://www.github.com/Namchee/fav',
		link: 'https://fav.namchee.dev',
	},
	{
		name: 'Windgraph',
		image: 'https://res.cloudinary.com/namchee/image/upload/v1655467239/personal-site/Windgraph.webp',
		description: 'Open Graph image generator as a service empowered with Tailwind CSS.',
		repository: 'https://www.github.com/Namchee/windgraph',
		link: 'https://windgraph.vercel.app',
	},
];
