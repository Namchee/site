---
import { getCollection } from "astro:content";

import Icon from "astro-iconify";

import Layout from "@/components/astro/layout/Layout.astro";
import AppLink from "@/components/astro/ui/AppLink.astro";

const posts = (await getCollection("posts"))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => a.data.publishedAt.getTime() - b.data.publishedAt.getTime());

const title = "My Personal Thoughts â€” Namchee";
const description =
  "Food for thoughts or just Namchee's passing whims in form of well-written posts";
---

<Layout title={title} description={description}>
  <div class="grid grid-cols-12 gap-4 my-16 lg:my-32 px-8">
    <header
      class="col-start-1 col-end-13 md:col-end-5 lg:col-start-2 lg:col-end-5 xl:col-start-3"
    >
      <div class="sticky top-12">
        <h1
          class="text-xl text-heading font-semibold tracking-tight transition-colors"
        >
          Posts
        </h1>
      </div>
    </header>

    <div
      class="mt-8 md:mt-0 col-start-1 col-end-13 md:mt-0 md:col-start-6 lg:col-start-6 lg:col-end-12 xl:col-end-11 space-y-16"
    >
      <ul class="space-y-8">
        {
          posts.map((post) => (
            <li>
              <AppLink
                href={`/posts/${post.slug}`}
                class="text-heading font-semibold tracking-tight hover:text-primary focus:text-primary transition-colors"
              >
                {post.data.title}
              </AppLink>

              <p class="text-sm mt-2 transition-colors">{post.data.subtitle}</p>

              <div class="flex items-center space-x-4 mt-4 text-xs text-content/70">
                <p>
                  {new Date(post.data.publishedAt).toLocaleString("en-GB", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </p>

                <div class="flex items-center">
                  <Icon pack="lucide" name="tag" class="w-3 h-3 mr-1" />

                  <div class="space-x-[2px] -mt-[2px]">
                    {post.data.tags.map((tag) => <span>{tag}</span>)}
                  </div>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
