---
import { getCollection } from "astro:content";

import Layout from "@/components/astro/layout/Layout.astro";
import AppLink from "@/components/astro/ui/AppLink.astro";

const posts = (await getCollection("posts"))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => a.data.publishedAt.getTime() - b.data.publishedAt.getTime());

const title = "Thoughts of Namchee";
const description =
  "Food for thoughts or just Namchee's passing whims in form of well-written posts";
---

<Layout title={title} description={description}>
  <div class="grid grid-cols-12 gap-4 my-16 lg:my-32 px-8">
    <header
      class="col-start-1 col-end-13 md:col-end-5 lg:col-start-2 lg:col-end-5 xl:col-start-3"
    >
      <div class="sticky top-12">
        <h1 class="text-xl text-heading font-semibold tracking-tight transition-colors">Posts</h1>
      </div>
    </header>

    <div
      class="mt-8 md:mt-0 col-start-1 col-end-13 md:mt-0 md:col-start-6 lg:col-start-6 lg:col-end-12 xl:col-end-11 space-y-16"
    >
      <ul class="space-y-8">
        {
          posts.map((post) => (
            <li class="space-y-4">
              <div class="flex justify-between items-center">
                <div>
                  <AppLink
                    class="text-heading font-semibold text-balance inline-flex items-center space-x-[2px] transition-colors hover:text-primary focus:text-primary"
                    href={`/posts/${post.slug}`}
                  >
                    {post.data.title}
                  </AppLink>

                  <p class="text-content/75 text-xs mt-1 transition-colors">
                    {post.data.publishedAt.toLocaleString("en-GB", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </p>
                </div>

                <div class="flex space-x-2">
                  {post.data.tags.map(tag =>
                    <div class="grid place-items-center rounded-full text-xs bg-surface py-1 px-2">
                      <span>{tag[0].toUpperCase() + tag.slice(1)}</span>
                    </div>
                  )}
                </div>
              </div>

              <p class="text-sm leading-normal">
                {post.data.subtitle}
              </p>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
